# aliases for time tracking
alias ttagcat='cat ~/.ttag-logfile.txt'
alias ttago='open ~/.ttag-logfile.txt'

# aliases for custom fortune files
alias myfortune="fortune $HOME/Documents/Fortunes/akm-quotes"

# More info: https://github.com/ogham/exa
if test exa;
then
  alias ls="exa"
  alias l="exa -l --group-directories-first --git" # show git status by default
  alias lh="exa -l"
  alias ll="exa -l"
  alias la="exa -la"
  alias lg="exa -la --git-ignore --git" # ignore files in .gitignore
  alias l.="exa -ld --git .*"           # list only dotfiles
  # commented out because they are slower than the alternatives below
  # alias lsf="find . -depth 1 -type f -exec exa -ld --git {} \;"  # list only files
  # alias lsd="find . -depth 1 -type d -exec exa -ld --git {} \;"  # list only directories
  alias lsf="exa -l | grep -v ^d"                                # list only files
  alias lsd="exa -Dl"                                            # list only directories
  alias lsym="find . -depth 1 -type l -exec exa -ld --git {} \;" # list only symlinks
  alias lt="exa -ls=newest --group-directories-first --git"      # list sorted by timestamp (oldest to newest)
else
  alias l="ls -l"
  alias lh="ls -lh"
  alias l.="ls -lGd .*"             # list only dotfiles
  alias lsf="find . -depth 1 -type f -exec ls -ld {} \;" # list only files
  alias lsd="find . -depth 1 -type d -exec ls -ld {} \;"             # list only directories
  alias lt="ls -lthGr" # show recently modified files
fi

# More info: https://github.com/sharkdp/bat
