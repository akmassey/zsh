npm update npm -g

if [ -d "$HOME/.nvm" ]; then
    pushd . > /dev/null

    (
     cd "$NVM_DIR"
     git fetch --tags origin
     git checkout `git describe --abbrev=0 --tags --match "v[0-9]*" $(git rev-list --tags --max-count=1)`
    ) && \. "$NVM_DIR/nvm.sh"

    popd > /dev/null
fi

nvm install node
