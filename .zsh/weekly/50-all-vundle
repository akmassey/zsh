echo "Updating vim and vundle configuration"
pushd . > /dev/null

cd $HOME/dotfiles/vim

update-vim-spellfile

git pull origin master

stow --restow --ignore "README.md|LICENSE.md" --dir=$HOME/dotfiles --target=$HOME vim

# requires the oh-my-zsh vundle plugin
vundle-update && vundle-clean

popd > /dev/null
